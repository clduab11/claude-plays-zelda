# Claude Plays Zelda - Environment Configuration
# Copy this file to .env and fill in your values

# === Required Settings ===

# Anthropic API Key (required)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Emulator Path (required)
# Path to your SNES emulator executable
# Example (Windows): C:\\Program Files\\Snes9x\\snes9x-x64.exe
# Example (Linux): /usr/bin/snes9x-gtk
# Example (Mac): /Applications/Snes9x.app/Contents/MacOS/Snes9x
EMULATOR_PATH=/path/to/snes9x

# ROM Path (required)
# Path to your Legend of Zelda: A Link to the Past ROM file
# NOTE: You must own a legal copy of the game
ROM_PATH=/path/to/zelda_alttp.smc

# === Optional Settings ===

# Claude Model
# Available models: claude-3-5-sonnet-20241022, claude-3-opus-20240229
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Maximum tokens for Claude responses
MAX_TOKENS=4096

# Emulator window title (for screen capture)
WINDOW_TITLE=Snes9x

# Action delay (seconds between actions)
ACTION_DELAY=0.5

# Decision interval (seconds between AI decisions)
DECISION_INTERVAL=2.0

# Frame rate for screen capture
FRAME_RATE=10

# === Vision Settings ===

# Enable OCR for text reading
ENABLE_OCR=true

# Enable object detection
ENABLE_OBJECT_DETECTION=true

# Screenshot directory
SCREENSHOT_DIR=data/screenshots

# === Memory and Learning ===

# Agent memory file
MEMORY_FILE=data/saves/agent_memory.json

# Save state directory
SAVE_STATE_DIR=data/saves

# Auto-save interval (seconds)
AUTO_SAVE_INTERVAL=300

# === Streaming Settings (Optional) ===

# Enable Twitch streaming (requires Twitch credentials)
ENABLE_STREAMING=false

# Twitch access token
# Get token from: https://twitchtokengenerator.com/
TWITCH_ACCESS_TOKEN=your_twitch_token_here

# Twitch channel name
TWITCH_CHANNEL=your_channel_name

# Enable web dashboard
ENABLE_WEB_DASHBOARD=true

# Web dashboard port
DASHBOARD_PORT=5000

# Highlight clips directory
HIGHLIGHT_DIR=data/highlights

# === OBS Settings (Optional) ===

# OBS WebSocket host
OBS_HOST=localhost

# OBS WebSocket port
OBS_PORT=4455

# OBS WebSocket password
OBS_PASSWORD=your_obs_password

# === Database Settings (Optional) ===

# PostgreSQL connection string
DATABASE_URL=postgresql://zelda:zelda_secret@localhost:5432/zelda_analytics

# PostgreSQL password (for Docker)
POSTGRES_PASSWORD=zelda_secret

# Redis connection
REDIS_URL=redis://localhost:6379/0

# === Grafana Settings (Optional) ===

# Grafana admin password
GRAFANA_PASSWORD=admin

# === Logging ===

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path
LOG_FILE=data/logs/zelda_ai.log

# === Performance ===

# Maximum decisions per session
MAX_DECISIONS_PER_SESSION=1000

# Timeout per action (seconds)
TIMEOUT_PER_ACTION=30
